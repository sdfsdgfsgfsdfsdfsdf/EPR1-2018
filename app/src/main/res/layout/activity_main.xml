<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a5d2bd"
    android:orientation="vertical">
    //PARTE SUPEIOR
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#72b898"
        android:padding="14dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CALCULO NOTAS"
            android:textColor="@android:color/white"
            android:textSize="20dp"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#111"
                    android:paddingTop="25dp"
                    android:paddingBottom="25dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:padding="15dp"
                    android:textColorHint="#505050"
                    android:textColor="@android:color/white"
                    android:hint="Ingresa EPR1"
                    android:inputType="numberDecimal"
                    android:id="@+id/txtEpr1"
                    android:maxLength="4" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:padding="15dp"
                    android:textColorHint="#505050"
                    android:textColor="@android:color/white"
                    android:inputType="numberDecimal"
                    android:hint="Ingresa EPE1"
                    android:id="@+id/txtEpe1"
                    android:maxLength="4" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:padding="15dp"
                    android:textColorHint="#505050"
                    android:textColor="@android:color/white"
                    android:inputType="numberDecimal"
                    android:hint="Ingresa EPR2"
                    android:id="@+id/txtEpr2"
                    android:maxLength="4" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:padding="15dp"
                    android:textColorHint="#505050"
                    android:inputType="numberDecimal"
                    android:textColor="@android:color/white"
                    android:hint="Ingresa EPE2"
                    android:id="@+id/txtEpe2"
                    android:maxLength="4" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="25dp"
                    android:textColor="#111"
                    android:paddingBottom="25dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:inputType="numberDecimal"
                    android:padding="15dp"
                    android:textColorHint="#505050"
                    android:textColor="@android:color/white"
                    android:hint="Ingresa EVA 1"
                    android:id="@+id/txtEva1"
                    android:maxLength="4" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:inputType="numberDecimal"
                    android:padding="15dp"
                    android:textColorHint="#505050"
                    android:textColor="@android:color/white"
                    android:hint="Ingresa EVA 2"
                    android:id="@+id/txtEva2"
                    android:maxLength="4" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:inputType="numberDecimal"
                    android:padding="15dp"
                    android:textColorHint="#505050"
                    android:textColor="@android:color/white"
                    android:hint="Ingresa EVA 3"
                    android:id="@+id/txtEva3"
                    android:maxLength="4" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:padding="15dp"
                    android:textColorHint="#505050"
                    android:textColor="@android:color/white"
                    android:hint="Ingresa EVA 4"
                    android:id="@+id/txtEva4"
                    android:inputType="numberDecimal"
                    android:maxLength="4" />
            </LinearLayout>
            //BOTON
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="CALCULAR"
                    android:textColor="@android:color/white"
                    android:textAlignment="center"
                    android:background="#72b898"
                    android:id="@+id/btnAceptar" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
